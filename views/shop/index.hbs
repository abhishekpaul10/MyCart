<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <style>
      .row {
        font-family: "Calibri", "sans-serif";
        bottom: 0;
      }
    </style>

<div class="row" style="width: 100%">
  <!--<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">-->
    <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
      {{successMsg}}
    </div>
</div>
<br><br>
{{#each products}}
    <div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img class="img-responsive" src="{{this.imagePath}}" alt="..."><br>
        <div class="caption">
          <h4>{{this.title}}</h4>
          <p class="captionText">{{this.description}}</p>
          <div class="clearfix">
              <div class="price"><h6>{{this.price}} INR</h6></div>
              <p>
                <!--<a href="#" class="btn btn-primary pull-right" role="button">Buy Now</a>--> 
                <a href="/add_to_cart/{{this.id}}" class="btn btn-primary pull-right" role="button" style="float: right, margin-bottom:0">Add to Cart</a>
              </p>
          </div>
        </div>
      </div>
    </div>  
  {{/each}}
  </div>
{{/each}}

